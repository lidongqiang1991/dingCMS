/*自定义弹窗样式*/
		.alert{
			width:480px;
			height:45px;
			padding-left:20px;
			padding-right:20px;
			/*display:flex;
			justify-content:space-between;*/
            line-height:45px;
            color:#fff;
            font-size:16px;
			background:rgba(7,132,75,.9);
			border-radius:3px;
			position:absolute;
			top:20px;
			left:50%;
			margin-left:-342px;
            box-shadow:#aaa 0 0 5px;
            display:none;
		}
        .icon{
            width:25px;
            height:25px;
            margin-top:10px;
            vertical-align:top;
            margin-right:20px;
        }
        .alert>img:last-child{
            width:15px;
            height:15px;
            margin-top:15px;
            cursor: pointer;
            float:right;
        }
        .alert>img:last-child:hover{
            opacity:.7;
        }